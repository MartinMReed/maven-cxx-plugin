<component-set>
	<components>
		
		<!--
			.A (AR, Static Library)
		-->
		<component>
			<role-hint>a</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.hardisonbrewing:maven-cxx-plugin:validate</validate>
							<generate-sources>org.hardisonbrewing:maven-cxx-plugin:dependency-copy,
								org.hardisonbrewing:maven-cxx-plugin:generate-sources</generate-sources>
							<compile>org.hardisonbrewing:maven-cxx-plugin:a-compile,
								org.hardisonbrewing:maven-cxx-plugin:a-assemble,
								org.hardisonbrewing:maven-cxx-plugin:a-archive</compile>
							<prepare-package>org.hardisonbrewing:maven-cxx-plugin:a-prepare-package</prepare-package>
							<package>org.hardisonbrewing:maven-cxx-plugin:package</package>
							<install>org.hardisonbrewing:maven-cxx-plugin:a-install</install>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>a</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>jar</extension>
				<packaging>a</packaging>
				<type>a</type>
			</configuration>
		</component>
		<component>
			<role-hint>a</role-hint>
			<role>org.hardisonbrewing.maven.cxx.component.BuildConfiguration</role>
			<implementation>org.hardisonbrewing.maven.cxx.component.DefaultBuildConfiguration</implementation>
			<configuration>
				<sourceDirectory>src/main/native</sourceDirectory>
			</configuration>
		</component>
		
		<!--
			ARDUINO
		-->
		<component>
			<role-hint>arduino</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.hardisonbrewing:maven-cxx-plugin:validate,
								org.hardisonbrewing:maven-cxx-plugin:arduino-validate</validate>
							<generate-sources>org.hardisonbrewing:maven-cxx-plugin:dependency-copy,
								org.hardisonbrewing:maven-cxx-plugin:generate-sources</generate-sources>
							<compile>org.hardisonbrewing:maven-cxx-plugin:arduino-compile,
								org.hardisonbrewing:maven-cxx-plugin:arduino-archive,
								org.hardisonbrewing:maven-cxx-plugin:arduino-link,
								org.hardisonbrewing:maven-cxx-plugin:arduino-post-compile</compile>
							<prepare-package>org.hardisonbrewing:maven-cxx-plugin:arduino-prepare-package</prepare-package>
							<package>org.hardisonbrewing:maven-cxx-plugin:package</package>
							<verify>org.hardisonbrewing:maven-cxx-plugin:arduino-verify</verify>
							<deploy>org.hardisonbrewing:maven-cxx-plugin:arduino-deploy</deploy>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>arduino</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>jar</extension>
				<packaging>arduino</packaging>
				<type>arduino</type>
			</configuration>
		</component>
		<component>
			<role-hint>arduino</role-hint>
			<role>org.hardisonbrewing.maven.cxx.component.BuildConfiguration</role>
			<implementation>org.hardisonbrewing.maven.cxx.component.DefaultBuildConfiguration</implementation>
			<configuration>
				<sourceDirectory>src/main/native</sourceDirectory>
			</configuration>
		</component>
		
		<!--
			.BAR (BLACKBERRY-AIRPACKAGER, BlackBerry TabletOS - AIR)
		-->
		<component>
			<role-hint>bar</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.hardisonbrewing:maven-cxx-plugin:validate,
								org.hardisonbrewing:maven-cxx-plugin:bar-validate</validate>
							<generate-sources>org.hardisonbrewing:maven-cxx-plugin:dependency-copy,
								org.hardisonbrewing:maven-cxx-plugin:generate-sources,
								org.hardisonbrewing:maven-cxx-plugin:bar-generate-app-descriptor</generate-sources>
							<compile>org.hardisonbrewing:maven-cxx-plugin:bar-swf-compile,
								org.hardisonbrewing:maven-cxx-plugin:bar-compile</compile>
							<prepare-package>org.hardisonbrewing:maven-cxx-plugin:bar-prepare-package</prepare-package>
							<package>org.hardisonbrewing:maven-cxx-plugin:package</package>
							<install>org.hardisonbrewing:maven-cxx-plugin:bar-install,
								org.hardisonbrewing:maven-cxx-plugin:bar-device-install</install>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>bar</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>jar</extension>
				<packaging>bar</packaging>
				<type>bar</type>
			</configuration>
		</component>
		<component>
			<role-hint>bar</role-hint>
			<role>org.hardisonbrewing.maven.cxx.component.BuildConfiguration</role>
			<implementation>org.hardisonbrewing.maven.cxx.component.DefaultBuildConfiguration</implementation>
			<configuration>
				<sourceDirectory>src/main/flex</sourceDirectory>
			</configuration>
		</component>
		
		<!--
			.O (GCC, Object File)
		-->
		<component>
			<role-hint>o</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.hardisonbrewing:maven-cxx-plugin:validate</validate>
							<generate-sources>org.hardisonbrewing:maven-cxx-plugin:dependency-copy,
								org.hardisonbrewing:maven-cxx-plugin:generate-sources</generate-sources>
							<compile>org.hardisonbrewing:maven-cxx-plugin:o-compile,
								org.hardisonbrewing:maven-cxx-plugin:o-assemble,
								org.hardisonbrewing:maven-cxx-plugin:o-link</compile>
							<prepare-package>org.hardisonbrewing:maven-cxx-plugin:o-prepare-package</prepare-package>
							<package>org.hardisonbrewing:maven-cxx-plugin:package</package>
							<install>org.hardisonbrewing:maven-cxx-plugin:o-install</install>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>o</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>jar</extension>
				<packaging>o</packaging>
				<type>o</type>
			</configuration>
		</component>
		<component>
			<role-hint>o</role-hint>
			<role>org.hardisonbrewing.maven.cxx.component.BuildConfiguration</role>
			<implementation>org.hardisonbrewing.maven.cxx.component.DefaultBuildConfiguration</implementation>
			<configuration>
				<sourceDirectory>src/main/native</sourceDirectory>
			</configuration>
		</component>
		
		<!--
			XCODE
		-->
		<component>
			<role-hint>xcode</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>clean</id>
						<phases>
							<clean>org.apache.maven.plugins:maven-clean-plugin:clean,
								org.hardisonbrewing:maven-cxx-plugin:xcode-clean</clean>
						</phases>
					</lifecycle>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.hardisonbrewing:maven-cxx-plugin:validate,
								org.hardisonbrewing:maven-cxx-plugin:xcode-validate</validate>
							<generate-sources>org.hardisonbrewing:maven-cxx-plugin:dependency-copy,
								org.hardisonbrewing:maven-cxx-plugin:generate-sources</generate-sources>
							<compile>org.hardisonbrewing:maven-cxx-plugin:xcode-compile</compile>
							<prepare-package>org.hardisonbrewing:maven-cxx-plugin:xcode-prepare-package</prepare-package>
							<package>org.hardisonbrewing:maven-cxx-plugin:package</package>
							<install>org.hardisonbrewing:maven-cxx-plugin:xcode-install</install>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>xcode</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>jar</extension>
				<packaging>xcode</packaging>
				<type>xcode</type>
			</configuration>
		</component>
	</components>
</component-set>
